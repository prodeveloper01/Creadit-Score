<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/mainbg"
        android:scaleType="centerCrop" />

    <RelativeLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="30dp">

        <ImageView
            android:id="@+id/ic_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/_15sdp"
            android:src="@drawable/backkk"
            android:tint="@color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/fontsemibold"
            android:singleLine="true"
            android:text="Compare Loan "
            android:textColor="@color/white"
            android:textSize="20dp" />
    </RelativeLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/nativeLay"
        android:layout_below="@+id/toolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/fontregular"
                android:text=" Compare Loan is a simple, fastest, and light-weight application practical as Loan EMI Calculator / Mortgage Calculator for all calculations."
                android:textColor="@color/white"
                android:textSize="15dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="20dp"
                        android:fontFamily="@font/fontsemibold"
                        android:gravity="center"
                        android:text="Loan 1"
                        android:textColor="@color/white"
                        android:textSize="22sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="20dp"
                        android:fontFamily="@font/fontsemibold"
                        android:text="Principle Amount*"
                        android:textColor="@color/white"
                        android:textSize="18sp" />

                    <EditText
                        android:id="@+id/principle_amount_edit_text_one"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/bg_trans_medium"
                        android:fontFamily="@font/montserrat_semibold"
                        android:hint="10,000"
                        android:inputType="numberDecimal"
                        android:padding="10dp"
                        android:textColor="@color/white"
                        android:textColorHint="@color/hint"
                        android:textSize="18sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="20dp"
                        android:fontFamily="@font/fontsemibold"
                        android:text="Interest Rate*"
                        android:textColor="@color/white"
                        android:textSize="18sp" />

                    <EditText
                        android:id="@+id/interest_rate_edit_text_one"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/bg_trans_medium"
                        android:fontFamily="@font/montserrat_semibold"
                        android:hint="10,000"
                        android:inputType="numberDecimal"
                        android:padding="10dp"
                        android:textColor="@color/white"
                        android:textColorHint="@color/hint"
                        android:textSize="18sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="20dp"
                        android:fontFamily="@font/fontsemibold"
                        android:text="Time Period"
                        android:textColor="@color/white"
                        android:textSize="18sp" />

                    <EditText
                        android:id="@+id/months_edit_text_one"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/bg_trans_medium"
                        android:fontFamily="@font/montserrat_semibold"
                        android:hint="10,000"
                        android:inputType="numberDecimal"
                        android:padding="10dp"
                        android:textColor="@color/white"
                        android:textColorHint="@color/hint"
                        android:textSize="18sp" />

                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="20dp"
                        android:fontFamily="@font/fontsemibold"
                        android:gravity="center"
                        android:text="Loan 2"
                        android:textColor="@color/white"
                        android:textSize="22sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="20dp"
                        android:fontFamily="@font/fontsemibold"
                        android:text="Principle Amount*"
                        android:textColor="@color/white"
                        android:textSize="18sp" />

                    <EditText
                        android:id="@+id/principle_amount_edit_text_two"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/bg_trans_medium"
                        android:fontFamily="@font/montserrat_semibold"
                        android:hint="10,000"
                        android:inputType="numberDecimal"
                        android:padding="10dp"
                        android:textColor="@color/white"
                        android:textColorHint="@color/hint"
                        android:textSize="18sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="20dp"
                        android:fontFamily="@font/fontsemibold"
                        android:text="Interest Rate*"
                        android:textColor="@color/white"
                        android:textSize="18sp" />

                    <EditText
                        android:id="@+id/interest_rate_edit_text_two"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/bg_trans_medium"
                        android:fontFamily="@font/montserrat_semibold"
                        android:hint="10,000"
                        android:inputType="numberDecimal"
                        android:padding="10dp"
                        android:textColor="@color/white"
                        android:textColorHint="@color/hint"
                        android:textSize="18sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="20dp"
                        android:fontFamily="@font/fontsemibold"
                        android:text="Time Period"
                        android:textColor="@color/white"
                        android:textSize="18sp" />

                    <EditText
                        android:id="@+id/months_edit_text_two"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/bg_trans_medium"
                        android:fontFamily="@font/montserrat_semibold"
                        android:hint="10,000"
                        android:inputType="numberDecimal"
                        android:padding="10dp"
                        android:textColor="@color/white"
                        android:textColorHint="@color/hint"
                        android:textSize="18sp" />

                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone">

                <com.skydoves.powerspinner.PowerSpinnerView
                    android:id="@+id/freq_spin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="30dp"
                    android:background="@drawable/bg_main"
                    android:gravity="center"
                    android:hint="Compound Interval"
                    android:padding="10dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black"
                    android:textSize="14.5sp"
                    app:spinner_arrow_gravity="end"
                    app:spinner_arrow_padding="8dp"
                    app:spinner_divider_color="@color/grey"
                    app:spinner_divider_show="true"
                    app:spinner_divider_size="0.4dp"
                    app:spinner_item_array="@array/rd_com_frq_array"
                    app:spinner_popup_animation="bounce"
                    app:spinner_popup_background="@color/grey"
                    app:spinner_popup_elevation="10dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="20dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <ImageView
                    android:id="@+id/reset_text_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    android:src="@drawable/btn_reset" />

                <ImageView
                    android:id="@+id/calculate_text_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    android:src="@drawable/btn_calculator" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:orientation="vertical"
                    android:padding="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:padding="12dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="4dp"
                            android:layout_weight="0.5"
                            android:background="@drawable/bg_trans_small"
                            android:fontFamily="@font/fontsemibold"
                            android:gravity="center"
                            android:padding="10dp"
                            android:text="Loan 1"
                            android:textColor="@color/white"
                            android:textSize="20sp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="4dp"
                            android:layout_weight="0.5"
                            android:background="@drawable/bg_trans_small"
                            android:fontFamily="@font/fontsemibold"
                            android:gravity="center"
                            android:padding="10dp"
                            android:text="Loan 2"
                            android:textColor="@color/white"
                            android:textSize="20sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="8dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            android:fontFamily="@font/fontsemibold"
                            android:text="Loan Amount"
                            android:textColor="@color/white"
                            android:textSize="18dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="12dp">

                            <TextView
                                android:id="@+id/loanAmt1"
                                android:layout_width="0dp"
                                android:layout_height="40dp"
                                android:layout_margin="4dp"
                                android:layout_weight="0.5"
                                android:background="@drawable/bg_trans_small"
                                android:gravity="center"
                                android:paddingStart="10dp"
                                android:fontFamily="@font/fontregular"
                                android:text=""
                                android:textColor="@color/white"
                                android:textSize="18dp"
                                android:textStyle="bold" />

                            <View
                                android:layout_width="0.5dp"
                                android:layout_height="0dp"
                                android:background="@color/white" />

                            <TextView
                                android:id="@+id/loanAmt2"
                                android:layout_width="0dp"
                                android:layout_height="40dp"
                                android:layout_margin="4dp"
                                android:fontFamily="@font/fontregular"
                                android:layout_weight="0.5"
                                android:background="@drawable/bg_trans_small"
                                android:gravity="center"
                                android:paddingStart="10dp"
                                android:paddingLeft="5dp"
                                android:text=""
                                android:textColor="@color/white"
                                android:textSize="18dp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="8dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            android:fontFamily="@font/fontsemibold"
                            android:text="EMI (Monthly Payment)"
                            android:textColor="@color/white"
                            android:textSize="18dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="12dp">

                            <TextView
                                android:id="@+id/emi_result_one"
                                android:layout_width="0dp"
                                android:layout_height="40dp"
                                android:layout_margin="4dp"
                                android:layout_weight="0.5"
                                android:background="@drawable/bg_trans_small"
                                android:fontFamily="@font/fontregular"
                                android:gravity="center"
                                android:paddingStart="10dp"
                                android:text=""
                                android:textColor="@color/white"
                                android:textSize="18dp"
                                android:textStyle="bold" />

                            <View
                                android:layout_width="0.5dp"
                                android:layout_height="0dp"
                                android:background="@color/white" />

                            <TextView
                                android:id="@+id/emi_result_two"
                                android:layout_width="0dp"
                                android:layout_height="40dp"
                                android:layout_margin="4dp"
                                android:layout_weight="0.5"
                                android:fontFamily="@font/fontregular"
                                android:background="@drawable/bg_trans_small"
                                android:gravity="center"
                                android:paddingStart="10dp"
                                android:paddingLeft="5dp"
                                android:text=""
                                android:textColor="@color/white"
                                android:textSize="18dp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="8dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            android:fontFamily="@font/fontsemibold"
                            android:text="Total Interest Payable"
                            android:textColor="@color/white"
                            android:textSize="18dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="12dp">

                            <TextView
                                android:id="@+id/interest_result_one"
                                android:layout_width="0dp"
                                android:layout_height="40dp"
                                android:layout_margin="4dp"
                                android:layout_weight="0.5"
                                android:fontFamily="@font/fontregular"
                                android:background="@drawable/bg_trans_small"
                                android:gravity="center"
                                android:paddingStart="10dp"
                                android:paddingLeft="5dp"
                                android:text=""
                                android:textColor="@color/white"
                                android:textSize="18dp"
                                android:textStyle="bold" />

                            <View
                                android:layout_width="0.5dp"
                                android:layout_height="0dp"
                                android:background="@color/white" />

                            <TextView
                                android:id="@+id/interest_result_two"
                                android:layout_width="0dp"
                                android:layout_height="40dp"
                                android:layout_margin="4dp"
                                android:layout_weight="0.5"
                                android:fontFamily="@font/fontregular"
                                android:background="@drawable/bg_trans_small"
                                android:gravity="center"
                                android:paddingStart="10dp"
                                android:paddingLeft="5dp"
                                android:text=""
                                android:textColor="@color/white"
                                android:textSize="18dp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="8dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            android:fontFamily="@font/fontsemibold"
                            android:text="Total Payment (Principle + Interest)"
                            android:textColor="@color/white"
                            android:textSize="18dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="12dp">

                            <TextView
                                android:id="@+id/total_result_one"
                                android:layout_width="0dp"
                                android:layout_height="40dp"
                                android:layout_margin="4dp"
                                android:fontFamily="@font/fontregular"
                                android:layout_weight="0.5"
                                android:background="@drawable/bg_trans_small"
                                android:gravity="center"
                                android:paddingStart="10dp"
                                android:paddingLeft="5dp"
                                android:text=""
                                android:textColor="@color/white"
                                android:textSize="18dp"
                                android:textStyle="bold" />

                            <View
                                android:layout_width="0.5dp"
                                android:layout_height="0dp" />

                            <TextView
                                android:id="@+id/total_result_twq"
                                android:layout_width="0dp"
                                android:layout_height="40dp"
                                android:fontFamily="@font/fontregular"
                                android:layout_margin="4dp"
                                android:layout_weight="0.5"
                                android:background="@drawable/bg_trans_small"
                                android:gravity="center"
                                android:paddingStart="10dp"
                                android:paddingLeft="5dp"
                                android:text=""
                                android:textColor="@color/white"
                                android:textSize="18dp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>


    <LinearLayout
        android:id="@+id/nativeLay"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignParentBottom="true"
        android:gravity="center_horizontal"
        android:orientation="vertical" />
</RelativeLayout>
