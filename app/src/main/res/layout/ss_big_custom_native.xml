                    <TextView android:textSize="12dp" android:textColor="#141517" android:gravity="center" android:layout_gravity="center" android:id="@+id/ad_body" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="jkjjkj&apos;h&apos;hn\10jnknikninggggg" android:singleLine="true"/>
